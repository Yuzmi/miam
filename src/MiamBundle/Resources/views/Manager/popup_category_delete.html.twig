<div class="popupContainer visible">
	<div class="popup">
		<div class="header">Delete category</div>

		<form method="POST" action="{{ path('manager_category_delete', {'id': category.id}) }}">
			Delete the "{{ category.name }}" and all subcategories ?

			<input type="hidden" name="csrf_token" value="{{ csrf_token('manager_category_delete') }}">

			<br><br>

			<button type="submit">Yes</button>
			<button class="closePopup">No</button>
		</form>
	</div>
</div>