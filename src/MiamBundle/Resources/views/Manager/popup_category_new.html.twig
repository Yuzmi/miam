{% extends "MiamBundle:Default:popup.html.twig" %}

{% block popupTitle %}New category{% endblock %}

{% block popupContent %}
	<form method="POST" action="{{ path('manager_category_create') }}">
		<label for="name">Name:</label>
		<input type="text" id="name" name="name" required>

		<br>

		<label for="parent">Parent:</label>
		<select id="parent" name="parent">
			<option></option>
			{% for c in categories %}
				<option value="{{ c.id }}">{{ c.path }}</option>
			{% endfor %}
		</select>

		<input type="hidden" name="csrf_token" value="{{ csrf_token('manager_category_save') }}">

		<br><br>

		<button type="submit">Create</button>
	</form>
{% endblock %}