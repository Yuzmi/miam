<header>
	{% if app.user %}
		<a href="{{ path('index') }}">Home</a> -
	{% endif %}
	<a href="{{ path('catalog') }}">Catalog</a>
	{% if app.user %}
		- <a href="{{ path('manager') }}">Manager</a>
		{% if is_granted('ROLE_ADMIN') %}
			- <a href="{{ path('admin') }}">Admin</a>
		{% endif %}
	{% endif %}
	<span class="user">
		{% if app.user %}
			Logged as {{ app.user.username }} -
			<a href="{{ path('logout') }}">
				<i class="fa fa-sign-out"></i>
			</a>
		{% else %}
			<a class="showLogin" href="{{ path('login') }}">Log in</a>
			-
			<a class="showRegister" href="{{ path('register') }}">Register</a>
		{% endif %}
	</span>
</header>